@model WelderViewModel

<form id="frmWelder" class="form-horizontal form-label-left">
    <div class="form-group">
        <label asp-for="@Model.Id" class="control-label col-sm-2 col-md-2 col-xs-12"></label>
        <div class="col-md-10 col-xs-12 col-sm-10">
            @if (Model.Update)
            {
                <input asp-for="@Model.Id" class="form-control" readonly />
            }
            else
            {
                <input asp-for="@Model.Id" class="form-control" />
            }

            <span asp-validation-for="@Model.Id" class="text-danger"></span>
        </div>
    </div>
    <input asp-for="@Model.Update" hidden />
    <div class="form-group">
        <label asp-for="@Model.Name" class="control-label col-sm-2 col-md-2 col-xs-12"></label>
        <div class="col-md-10 col-xs-12 col-sm-10">
            <input asp-for="@Model.Name" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.BrithDay" class="control-label col-sm-2 col-md-2 col-xs-12"></label>
        <div class="col-md-10 col-xs-12 col-sm-10">
            <input value="@Model.BrithDay.ToString("dd/MM/yyyy")" class="form-control" id="Bdate" />
            <input asp-for="@Model.BrithDay" hidden />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Status" class="control-label col-sm-2 col-md-2 col-xs-12"></label>
        <div class="col-md-10 col-xs-12 col-sm-10">
            <div class="checkbox">

                <input asp-for="@Model.Status" style="margin-left:unset" />
                <span asp-validation-for="@Model.Status" class="text-danger"></span>

            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Remark" class="control-label col-sm-2 col-md-2 col-xs-12"></label>
        <div class="col-md-10 col-xs-12 col-sm-10">
            <textarea asp-for="@Model.Remark" class="form-control" type="text"></textarea>
            <span asp-validation-for="@Model.Remark" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-4">
            <input type="button" class="btn btn-info" onclick="saveData()" value="Lưu" />
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        </div>
    </div>
</form>