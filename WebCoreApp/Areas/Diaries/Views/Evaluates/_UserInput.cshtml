@model WebCoreApp.Data.TblDailyDetail
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<form id="frmUserInp" class="form-horizontal">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DailyId" />
    <input type="hidden" asp-for="Comment1" />
    <input type="hidden" asp-for="Comment2" />
    <input type="hidden" asp-for="Comment3" />
    <input type="hidden" asp-for="Level1" />
    <input type="hidden" asp-for="Level2" />
    <input type="hidden" asp-for="Level3" />
    <div class="form-group">
        <label class="control-label col-md-2">Từ</label>
        <div class="col-md-4">
            <input type="time" asp-for="FormTime" class="form-control" />
            <span asp-validation-for="FormTime" class="text-danger"></span>
        </div>
        <label class="control-label col-md-2">Tới</label>
        <div class="col-md-4">
            <input type="time" asp-for="ToTime" class="form-control" />
            <span asp-validation-for="ToTime" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Nội dung</label>
        <div class="col-md-10">
            <textarea  asp-for="ContentJob" class="form-control"></textarea>
            <span asp-validation-for="ContentJob" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Loại Công Việc</label>
        <div class="col-md-10">
            <select asp-for="JobId" asp-items="@(ViewBag.JobList as SelectList)" class="form-control">
                <option value="">--- Chọn ---</option>
            </select>
            <span asp-validation-for="JobId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Phương Pháp Thực Hiện</label>
        <div class="col-md-10">
            <TextArea asp-for="Method" class="form-control"></TextArea>
            <span asp-validation-for="Method" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Kết quả</label>
        <div class="col-md-10">
            <TextArea asp-for="Result" class="form-control"></TextArea>
            <span asp-validation-for="Result" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">

        <div class="col-md-offset-2 col-md-4">
            <input type="button" class="btn btn-primary" onclick="save()" value="Lưu" />
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        </div>
    </div>
</form>