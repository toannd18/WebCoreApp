
@{
    ViewData["Title"] = "Chức Năng";
    //   Layout =
    //"~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    <script src="~/lib/bootstrap/bootstrap-treeview/bootstrap-treeview.min.js" asp-append-version="true"></script>
    <script src="~/js/System/function.js" asp-append-version="true"></script>
}
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Chức năng</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="form-group">
                    <button class="btn btn-success" onclick="getData(0)" data-toggle="Thêm"><i class="fa fa-plus"></i></button>
                    <button class="btn btn-info" onclick="getData(1)" data-toggle="Sửa"><i class="fa fa-edit"></i></button>
                    <button class="btn btn-danger" onclick="deleteData()" data-toggle="Xóa"><i class="fa fa-trash"></i></button>
                    <button class="btn btn-primary" onclick="getRole()" data-toggle="Xóa"><i class="fa fa-lock"></i></button>
                </div>
               
                <br />
                <div id="tree"></div>
            </div>
        </div>
    </div>
</div>
