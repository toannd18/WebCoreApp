<div class="login_wrapper">
    <div class="animate form login_form">
        <section class="login_content">
            <form asp-action="Login" asp-controller="Account" method="post">

                <h1>Đăng nhập</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="text-info">@ViewBag.Message</div>
                }
                <div>
                    <input asp-for="UserName" class="form-control" placeholder="Tài khoản" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div>
                    <input asp-for="PassWord" class="form-control" placeholder="Mật khẩu" />
                    <span asp-validation-for="PassWord" class="text-danger"></span>
                </div>
                <div>
                    <button type="submit" class="btn btn-default submit">Đăng nhập</button>
                    @*<a class="btn btn-default submit">Đăng nhập</a>*@
                    <a class="reset_pass" href="/Account/ResetPassword">Quên mật khẩu</a>
                </div>
                <div class="clearfix"></div>
                <div class="separator">
